<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/light_red</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/white</item>
        <!--<item name="android:statusBarColor">@color/white</item>-->
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="full_screen_dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <!--
        Progress Loader
        -->
    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="android:minHeight">35dp</item>
        <item name="android:maxHeight">35dp</item>    </style>

    <style name="DialogAnimation">
        <item name="android:background">@android:color/transparent</item>

        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>
    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_dialog_view</item>
    </style>

    <style name="GreenTextInputLayout" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/gray2</item>
        <item name="colorControlNormal">@color/gray2</item>
        <item name="colorControlActivated">@color/light_red</item>
        <item name="colorControlHighlight">@color/light_red</item>

    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/gray2</item>
        <item name="android:textSize">16sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/lightgray</item>
        <item name="colorControlNormal">@color/lightgray</item>
        <item name="colorControlActivated">@color/lightgray</item>
    </style>




    <style name="ProgressBarTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="mytext" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/gray2</item>
        <item name="android:textColorHint">@color/gray2</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="colorAccent">@color/light_red</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TextLabelLogin" parent="@android:style/TextAppearance">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/gray2</item>
        <item name="android:textSize">@dimen/font_14</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="colorAccent">@color/gray2</item>
        <item name="colorControlNormal">@color/gray2</item>
        <item name="colorControlActivated">@color/gray2</item>
    </style>

    <style name="pin_edittext_style">
        <item name="android:gravity">center</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:maxLength">1</item>
        <item name="android:minEms">2</item>
        <item name="android:inputType">number</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="anti_theft_t9_key">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">centerInside</item>
    </style>


</resources>
