                <Button
                    android:layout_width="match_parent"
                    android:layout_marginStart="50dp"
                    android:textSize="18sp"
                    android:id="@+id/btnSave"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="10dp"
