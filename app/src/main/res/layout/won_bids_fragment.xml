<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:id="@+id/scroll"
        android:layout_above="@+id/rlBottom"
        android:layout_below="@+id/toolbar"

        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/rlUserDetail"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="40dp"
                    android:src="@drawable/placeholder_face_big"
                    android:id="@+id/ivProfile"
                    android:layout_height="40dp"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/ivProfile"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/ivProfile"
                    android:layout_marginStart="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:text="@string/ramesh_n"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:layout_below="@+id/llTime"
                            android:id="@+id/llMinAmt"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:text="@string/mrp"
                                android:layout_marginTop="3dp"
                                android:textColor="@android:color/black"

                                android:textSize="14sp"
                                android:layout_gravity="center"
                                android:fontFamily="@font/poppins_semibold"
                                android:layout_marginLeft="10dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:text="@string/rupees"
                                android:layout_marginTop="3dp"
                                android:textColor="@android:color/black"

                                android:textSize="14sp"
                                android:layout_gravity="center"
                                android:fontFamily="@font/poppins_semibold"
                                android:layout_marginLeft="10dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:text="@string/_12345_78"
                                android:layout_marginTop="3dp"
                                android:textSize="14sp"
                                android:textColor="@android:color/black"

                                android:layout_gravity="center"
                                android:fontFamily="@font/poppins_semibold"
                                android:layout_marginLeft="3dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="3dp" />


                        </LinearLayout>




                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Order Id: 345213"
                            android:textSize="12sp"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_marginTop="5dp"
                            android:textColor="@android:color/black"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:layout_below="@+id/llTime"
                            android:id="@+id/llFinal"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:text="@string/finaln"
                                android:textAllCaps="true"
                                android:layout_marginTop="3dp"
                                android:textColor="@android:color/black"

                                android:textSize="14sp"
                                android:layout_gravity="center"
                                android:fontFamily="@font/poppins_semibold"
                                android:layout_marginLeft="10dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:text="@string/rupees"
                                android:layout_marginTop="3dp"
                                android:textColor="@android:color/black"

                                android:textSize="14sp"
                                android:layout_gravity="center"
                                android:fontFamily="@font/poppins_semibold"
                                android:layout_marginLeft="10dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:text="@string/_12345_78"
                                android:layout_marginTop="3dp"
                                android:textSize="14sp"
                                android:textColor="@android:color/black"

                                android:layout_gravity="center"
                                android:fontFamily="@font/poppins_semibold"
                                android:layout_marginLeft="3dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="3dp" />


                        </LinearLayout>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="6 July 2019 | 10:30 AM"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginTop="5dp"
                        android:textColor="@android:color/black"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Address: Lorem Ipsum Dolor Ipsum\ndolor sit amet."
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginTop="5dp"
                        android:textColor="@android:color/black"
                        android:layout_height="wrap_content" />





                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="7dp"

                        android:layout_height="wrap_content">


                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Contact: 98788888"
                            android:textSize="12sp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@android:color/black"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_width="50dp"
                            android:layout_marginStart="10dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"

                            android:background="@drawable/shape_btn_new_green"
                            android:layout_height="20sp">

                            <ImageView
                                android:layout_width="10dp"
                                android:layout_gravity="center"
                                android:tint="@color/white"

                                android:src="@drawable/ic_phone_receiver"
                                android:layout_height="10dp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/call"
                                android:textSize="12sp"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:layout_marginLeft="4dp"
                                android:fontFamily="@font/poppins_regular"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </LinearLayout>




                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/llView"
                android:layout_below="@+id/rlUserDetail"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:id="@+id/recyclerItem"
                    android:layout_below="@+id/rlUserDetail"
                    android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>

                <View
                    android:layout_width="match_parent"
                    android:background="@color/lightgray"
                    android:layout_marginTop="10dp"
                    android:id="@+id/view"
                    android:layout_below="@+id/recyclerItem"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_below="@+id/view"
                    android:layout_marginTop="10dp"

                    android:orientation="horizontal"

                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Total Inculsive of all taxes"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:layout_marginLeft="50dp"
                        android:textSize="17sp"
                        android:textColor="@android:color/black"
                        android:layout_weight="4"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Rs 250.00"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="end"
                        android:layout_marginEnd="10dp"
                        android:textSize="17sp"
                        android:textColor="@android:color/black"
                        android:layout_weight="4"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_below="@+id/llView"
                android:layout_height="40dp" />




        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>




    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rlBottom"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:id="@+id/llMrp"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="MRP"
                android:fontFamily="@font/poppins_regular"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="₹ 225.00"
                android:fontFamily="@font/poppins_semibold"

                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content" />



        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:id="@+id/viewn"
            android:layout_toEndOf="@+id/llMrp"
            android:layout_marginStart="10dp"
            android:background="@android:color/black"
            android:layout_height="50dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/viewn"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Final"
                android:fontFamily="@font/poppins_regular"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="₹ 225.00"
                android:fontFamily="@font/poppins_semibold"

                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content" />



        </LinearLayout>

        <RelativeLayout
            android:layout_width="180dp"
            android:background="@drawable/shape_light_red"
            android:layout_alignParentEnd="true"
            android:id="@+id/rlAssignDelivery"
            android:layout_marginEnd="10dp"
            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:text="@string/assigned_delivery"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"


                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="3dp"
                android:background="@drawable/shape_circle_white"
                android:layout_height="40dp">

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>








</RelativeLayout>