<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="2dp"
    android:id="@+id/llOrders"
    android:orientation="vertical"

    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="40dp"
            android:src="@drawable/placeholder_face_big"
            android:layout_marginTop="10dp"
            android:id="@+id/ivProfile"
            android:layout_marginLeft="5dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/ivProfile"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ivProfile"
            android:layout_marginStart="5dp"
            tools:ignore="RelativeOverlap">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/ramesh_n"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="17sp"
                    android:id="@+id/txtUserName"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/order_id_34513"
                    android:textSize="10sp"
                    android:layout_marginTop="-3dp"
                    android:id="@+id/txtUserId"
                    android:layout_below="@+id/txtUserName"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:id="@+id/llMinAmt"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"

                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="PRICE"
                        android:textColor="@color/gray12"
                        android:textSize="14sp" />




                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/_12345_78"
                        android:id="@+id/txtPrice"
                        android:textSize="14sp"
                        android:layout_marginTop="-5dp"
                        android:textColor="@color/light_red"

                        android:layout_gravity="center"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_height="wrap_content"
        />


                </LinearLayout>


            </RelativeLayout>








            <TextView
                android:layout_width="@dimen/dimen_180"
                android:text="Address:Lorem Ipsum \ndolor sit amet."
                android:textSize="10sp"

                android:id="@+id/txtAddress"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content" />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/contact"
                    android:textSize="10sp"

                    android:id="@+id/txtContact"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/purple1"
                    android:layout_height="wrap_content" />
                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/dimen_30"
                    android:layout_marginLeft="@dimen/dimen_10"
                    app:cardBackgroundColor="@color/green"
                    android:layout_centerVertical="true"
                    app:cardCornerRadius="10dp"
                    android:layout_toRightOf="@+id/txtContact"
                    android:id="@+id/cardCall"
                    app:cardElevation="5dp"
                    android:layout_gravity="center"
                    android:layout_height="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/llCCall"
                        android:gravity="center"

                        android:padding="@dimen/dimen_4"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="@dimen/dimen_12"
                            android:src="@drawable/ic_phone_receiver"
                            android:tint="@color/white"
                            android:layout_gravity="center"
                            android:layout_height="@dimen/dimen_12" />



                    </LinearLayout>

                </androidx.cardview.widget.CardView>




                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/dimen_130"
                    android:padding="5dp"

                    android:layout_marginLeft="3dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"


                    app:cardCornerRadius="@dimen/dimen_15"

                    app:cardBackgroundColor="@color/green"
                    android:id="@+id/cardStatus"
                    app:cardElevation="2dp"

                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dimen_10"
                    android:layout_alignParentRight="true"
                    android:layout_height="@dimen/dimen_30"
                    android:layout_alignParentEnd="true"
                  >

                    <TextView
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:layout_marginTop="@dimen/dimen_1"
                        android:id="@+id/txtDeliveryAssign"
                        android:textSize="10sp"
                        android:text="Delivery Assigned"
                        android:layout_height="wrap_content" />



                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:id="@+id/llTime"
            android:layout_marginTop="5dp"

            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp">




        </LinearLayout>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/llCurrent"
            android:layout_marginRight="10dp"

            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp">


        </LinearLayout>



    </RelativeLayout>




    <View
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:background="@color/lightgray"
        android:layout_height="1dp"/>




</LinearLayout>