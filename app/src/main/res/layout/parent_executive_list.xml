<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rlExpand"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="35dp"
        android:src="@drawable/placeholder_face_big"
        app:civ_border_width="1dp"
        android:id="@+id/ivUserImage"
        android:layout_margin="10dp"
        app:civ_border_color="@color/purple"
        android:layout_height="35dp" />


    <ImageView
        android:layout_width="@dimen/dimen_15"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/arrowleft"
        android:id="@+id/ivCollapse"
        android:tint="@color/light_red"
        android:layout_marginRight="5dp"
        android:layout_height="@dimen/dimen_15" />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_toRightOf="@+id/ivUserImage"
        android:orientation="vertical"
        android:id="@+id/llHeader"
        android:layout_alignTop="@+id/ivUserImage"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="17sp"
            android:id="@+id/txtName"
            android:fontFamily="@font/poppins_regular"
            android:text="Prachi Saini"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="wrap_content"
            android:textSize="10sp"
            android:layout_marginTop="-6dp"
            android:id="@+id/txtId"
            android:fontFamily="@font/poppins_regular"
            android:text="ID:235555"
            android:textColor="@color/blacknew"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/llChildView"
            android:visibility="visible"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="10sp"
                    android:id="@+id/txtContactNu"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Contact:96878888"
                    android:textColor="@color/blackn"
                    android:layout_height="wrap_content" />

                <androidx.cardview.widget.CardView
                    android:layout_width="55dp"
                    android:layout_marginLeft="10dp"
                    app:cardBackgroundColor="@color/green"
                    app:cardCornerRadius="10dp"
                    android:id="@+id/cardCall"
                    app:cardElevation="5dp"
                    android:layout_gravity="center"
                    android:layout_height="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:paddingTop="1dp"
                        android:layout_marginRight="5dp"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="10dp"
                            android:src="@drawable/ic_phone_receiver"
                            android:tint="@color/white"
                            android:layout_gravity="center"
                            android:layout_height="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Call"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:paddingLeft="4dp"
                            android:textSize="12sp"

                            android:textColor="@android:color/white"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>



            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                android:textColor="@color/blackn"
                android:text="Address"
                android:textSize="10sp"
                android:fontFamily="@font/poppins_regular"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/txtAddress"
                android:textColor="@color/blackn"
                android:layout_marginTop="-7dp"
                android:textSize="10sp"
                android:text="Address:Lorem Ipsum dolor sit amet \nLorem Ipsum dolor sit amet"
                android:fontFamily="@font/poppins_regular"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/blackn"
                android:id="@+id/txtEmail"
                android:layout_marginTop="@dimen/dimen_5"
                android:textSize="10sp"
                android:text="Email:prachi@provabmail.com"
                android:fontFamily="@font/poppins_regular"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/blackn"
                android:text="Vehicle Number"
                android:textSize="10sp"
                android:layout_marginTop="@dimen/dimen_5"
                android:fontFamily="@font/poppins_regular"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/blackn"
                android:layout_marginTop="-7dp"
                android:textSize="10sp"
                android:id="@+id/txtVehiclenumber"
                android:text="8999"
                android:fontFamily="@font/poppins_semibold"
                android:layout_height="wrap_content" />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:id="@+id/recyclerExec"
                    android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_marginRight="18dp"


                    android:layout_below="@+id/recyclerExec"

                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="@dimen/dimen_25"
                            android:layout_gravity="center"

                            android:layout_marginEnd="25dp"
                            android:layout_marginTop="-2dp"
                            android:id="@+id/ivLocation"
                            android:layout_marginStart="10dp"
                            app:srcCompat="@drawable/ic_tracker"
                            android:layout_height="@dimen/dimen_25" />

                        <ImageView
                            android:layout_width="@dimen/dimen_20"
                            app:srcCompat="@drawable/ic_edit"
                            android:tint="@color/gray10"
                            android:id="@+id/ivEdit"
                            android:layout_marginEnd="25dp"
                            android:layout_height="@dimen/dimen_20" />



                        <ImageView
                            android:layout_width="@dimen/dimen_20"
                            android:id="@+id/ivDelete"
                            app:srcCompat="@drawable/ic_delete"
                            android:layout_marginEnd="10dp"
                            android:tint="@color/gray10"
                            android:layout_height="@dimen/dimen_20" />

                    </LinearLayout>
                </RelativeLayout>




            </RelativeLayout>










        </LinearLayout>






    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:background="@color/lightgray"
        android:layout_below="@+id/llHeader"
        android:layout_marginTop="8dp"
        android:layout_height=".55dp"/>




</RelativeLayout>