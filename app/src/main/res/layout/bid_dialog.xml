<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:id="@+id/llParent"

    android:orientation="vertical"
    android:background="@drawable/shape_dialog_view"
    android:layout_height="wrap_content"
    tools:context=".activity.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:layout_marginTop="10dp"

        android:layout_marginStart="10dp"
        android:text="Order Id:345213"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:layout_marginStart="10dp"

        android:layout_marginTop="5dp"
        android:text="6 th July 2019 | 2019"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:layout_marginStart="10dp"

        android:layout_marginTop="5dp"
        android:text="Address:Lorem Ipsum dolor Sit amet\nlorem Ipsum"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:layout_marginTop="5dp"

        android:layout_marginLeft="10dp"
        android:text="Contact:989299990"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:layout_marginStart="10dp"

        android:layout_marginTop="15dp"
        android:text="Assigned to:"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="40dp"
            android:src="@drawable/placeholder_face_big"
            android:id="@+id/ivProfile"
            android:layout_height="40dp"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/ivProfile"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ivProfile"
            android:layout_marginStart="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:text="@string/ramesh_n"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/out_for_delivery"
                    android:textAllCaps="true"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="14sp"
                    android:textColor="@color/green"
                    android:layout_height="wrap_content" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/contact"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="6 July 2019 | 1:30 PM"
                    android:textSize="12sp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content" />

            </RelativeLayout>





            <LinearLayout
                android:layout_width="70dp"
                android:layout_marginTop="10dp"

                android:background="@drawable/shape_btn_green"
                android:layout_height="30dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_gravity="center"
                    android:tint="@color/white"

                    android:layout_marginStart="10dp"
                    app:srcCompat="@drawable/ic_phone_receiver"
                    android:layout_height="20dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/call"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_marginStart="3dp"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="10dp"
        android:text="@string/track_executive"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_regular"

        android:background="@drawable/shape_btn_curve"
        android:layout_height="50dp" />


</LinearLayout>
