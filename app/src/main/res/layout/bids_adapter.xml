<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:background="@android:color/white"
    android:layout_height="wrap_content">



    <ImageView
        android:layout_width="35dp"
        android:src="@drawable/placeholder_face_big"
        android:layout_marginTop="5dp"
        android:layout_centerVertical="true"
        android:id="@+id/ivProfile"
        android:layout_marginLeft="10dp"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/ivProfile"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/ivProfile"
        android:layout_marginStart="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/ramesh_n"
            android:id="@+id/txtPatientName"
            android:fontFamily="@font/poppins_regular"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/order_id_34513"
            android:textSize="12sp"
            android:id="@+id/txtOrderId"
            android:layout_marginTop="-4dp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="wrap_content"
            android:text="@string/_3_1_kms_7_min_away"
            android:textSize="12sp"
            android:layout_marginTop="-2dp"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:id="@+id/llTime"
        android:layout_marginTop="5dp"

        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="15dp"
                app:srcCompat="@drawable/ic_passage_of_time"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:id="@+id/watch"
                />

            <TextView
                android:layout_width="wrap_content"
                android:text="@string/_22_35"
                android:textSize="14sp"
                android:textColor="@color/green"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="MRP"
                    android:layout_marginTop="-3dp"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_width="wrap_content"
                    android:text="MRP"
                    android:id="@+id/txtTotalPrice"
                    android:layout_marginTop="-3dp"

                    android:fontFamily="@font/poppins_bold"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="30dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Current"
                    android:textAllCaps="true"
                    android:layout_marginTop="-3dp"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_width="wrap_content"
                    android:text="MRP"
                    android:id="@+id/txtBids"
                    android:layout_marginTop="-3dp"
                    android:textColor="@color/light_red"

                    android:fontFamily="@font/poppins_bold"
                    android:layout_height="wrap_content" />

            </LinearLayout>




        </LinearLayout>



    </LinearLayout>







</RelativeLayout>